@page
@model ChatModel
@{
    ViewData["Title"] = "Chat";
}

<h2>Chat Application</h2>

<div>
    <button>Txt (opens available empty chat)</button>
    <button>Mic (records into open or empty)</button>
    <button id="transcribeButton">Mic auto (records into open or empty, auto-stop)</button>
    <div id="statusBar">Ready</div>
</div>

<div id="connectionStatus">Status: <span id="statusText" class="disconnected">Disconnected</span></div>

@section Scripts {
    <script src="~/js/transcription.js"></script>
    <script src="~/js/chats.js"></script>
}

@section BodyEnd {
    <div id="chatsContainer" class="chat-buttons-container"></div>
}