@page
@model ChatModel
@{
    ViewData["Title"] = "Chat";
}

<h2>Chat Application</h2>

<div>
    <button>Txt (opens available empty chat)</button>
    <button id="micLock">Mic Lock</button>
    <button id="transcribeButton">Mic auto (records into open or empty, auto-stop)</button>
    <div id="statusBar">Ready</div>
    <button id="connectButton">Connect</button>
</div>

<div id="connectionStatus">Status: <span id="statusText" class="disconnected">Disconnected</span></div>

@section Scripts {
    <script src="~/js/transcription.js"></script>
    <script src="~/js/chats.js"></script>
}

@section BodyEnd {
    <div class="all-buttons-container">
        <div class="mic-buttons-container">
            <div class="circular-animation circular-animation-show">
                <button class="btn mic-button" type="button" id="micStartButton">
                    <i class="fas fa-microphone"></i>
                </button>
            </div>
            <button class="btn mic-button" type="button" id="micCancelButton">
                <i class="fas fa-ban"></i>
            </button>
            <div class="circular-progress circular-progress-show" style="--progress: 75;" id="silenceProgress">
                <button class="btn btn-success mic-button" type="button" id="micSubmitButton">
                    <i class="fas fa-check"></i>
                </button>
            </div>
        </div>
        <div id="chatsContainer" class="chat-buttons-container"></div>
    </div>
}