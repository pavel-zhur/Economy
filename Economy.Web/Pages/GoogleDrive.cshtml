@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GoogleDriveModel
@inject IHostEnvironment HostEnvironment
@{
    ViewData["Title"] = "Google Drive";
}

<form method="post" asp-page-handler="Save" class="form">
    <button type="submit" class="btn btn-primary">Save state</button>
</form>

@if (HostEnvironment.IsDevelopment())
{
    <form method="post" asp-page-handler="UploadUserDataFromFile" class="form">
        <button type="submit" class="btn btn-secondary">Upload user data from file</button>
    </form>

    <form method="post" asp-page-handler="CopyUserDataToFile" class="form">
        <button type="submit" class="btn btn-secondary">Copy user data to file</button>
    </form>
}

<form method="post" asp-page-handler="DownloadUserData" class="form">
    <button type="submit" class="btn btn-secondary">Download user data</button>
</form>

<form method="post" asp-page-handler="UploadUserData" class="form" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit" class="btn btn-secondary">Upload user data</button>
</form>