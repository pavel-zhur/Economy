@page
@model Economy.Web.Pages.PlansModel
@{
    ViewData["Title"] = "Plans";
}

<div>
    <button id="reload-button" class="btn btn-primary">Reload Plans</button>
</div>

<div id="plans-container" class="mt-4">
    <partial name="DynamicPlans" />
</div>

@section Scripts {
    <script>
        document.getElementById('reload-button').addEventListener('click', function() {
            const reloadButton = document.getElementById('reload-button');
            const plansContainer = document.getElementById('plans-container');

            // Change button text and disable it
            reloadButton.textContent = 'Reloading...';
            reloadButton.disabled = true;

            // Add reloading class to the container
            plansContainer.classList.add('reloading');

            fetch('/Plans?handler=Reload')
                .then(response => response.text())
                .then(html => {
                    // Update the container with new content
                    plansContainer.innerHTML = html;

                    // Reset button text and enable it
                    reloadButton.textContent = 'Reload Plans';
                    reloadButton.disabled = false;

                    // Remove reloading class
                    plansContainer.classList.remove('reloading');
                })
                .catch(error => {
                    // Handle error: clear container and set button text to "Error"
                    plansContainer.innerHTML = '';
                    reloadButton.textContent = 'Error';
                    reloadButton.disabled = false;

                    // Remove reloading class
                    plansContainer.classList.remove('reloading');
                });
        });
    </script>
}