@page
@model Economy.Web.Pages.BudgetsModel
@{
    ViewData["Title"] = "Budgets";
}

<div>
    <button id="reload-button" class="btn btn-primary">Reload Budgets</button>
</div>

<div id="budgets-container" class="mt-4">
    <partial name="DynamicBudgets" />
</div>

@section Scripts {
    <script>
        document.getElementById('reload-button').addEventListener('click', function() {
            const reloadButton = document.getElementById('reload-button');
            const budgetsContainer = document.getElementById('budgets-container');

            // Change button text and disable it
            reloadButton.textContent = 'Reloading...';
            reloadButton.disabled = true;

            // Add reloading class to the container
            budgetsContainer.classList.add('reloading');

            fetch('/Budgets?handler=Reload')
                .then(response => response.text())
                .then(html => {
                    // Update the container with new content
                    budgetsContainer.innerHTML = html;

                    // Reset button text and enable it
                    reloadButton.textContent = 'Reload Budgets';
                    reloadButton.disabled = false;

                    // Remove reloading class
                    budgetsContainer.classList.remove('reloading');
                })
                .catch(error => {
                    // Handle error: clear container and set button text to "Error"
                    budgetsContainer.innerHTML = '';
                    reloadButton.textContent = 'Error';
                    reloadButton.disabled = false;

                    // Remove reloading class
                    budgetsContainer.classList.remove('reloading');
                });
        });
    </script>
}